<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:StudentSystem.Styles">
    <!--Table TextBlock-->
    <Style x:Key="TableHeader" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource LightText}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="15 2"/>
    </Style>
    <Style x:Key="TableBody" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TableHeader}">
        <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
    </Style>

    <!--Personal Information TextBlock-->
    <Style x:Key="PersonalInformationData" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="15"/>
    </Style>
    <Style x:Key="PersonalInformationTitle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource PersonalInformationData}">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Margin" Value="10 0 0 0"/>
    </Style>
</ResourceDictionary>