<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:StudentSystem.Styles">
    <Style x:Key="TableHeader" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource LightText}"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="15 2"/>
    </Style>
    <Style x:Key="TableBody" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TableHeader}">
        <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
    </Style>
</ResourceDictionary>


    