<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:StudentSystem.Styles">
    <Style x:Key="StudentCoursesTableContent" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource DarkText}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="15 5"/>
    </Style>
    <Style x:Key="StudentCoursesTableHeader" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource StudentCoursesTableContent}">
        <Setter Property="Foreground" Value="{StaticResource LightText}"/>
    </Style>
</ResourceDictionary>
    