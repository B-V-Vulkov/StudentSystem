        <!--Courses Table-->
        <DataGrid Grid.Row="1"
                  BorderThickness="0"
                  ItemsSource="{Binding Path=Courses}"
                  AutoGenerateColumns="False"
                  CanUserReorderColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name}"
                                    Width="200"
                                    IsReadOnly="True"
                                    Header="Course" >
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Teacher}"
                                    Width="200"
                                    IsReadOnly="True"
                                    Header="Teacher" >
                </DataGridTextColumn>
                <DataGridTextColumn>
                    <DataGridTextColumn.Header>
                        <TextBlock Text="DSDS"/>
                    </DataGridTextColumn.Header>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
       
